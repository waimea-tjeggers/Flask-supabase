{% extends 'pages/base.jinja' %}

{% block title %}

    Flask and Supabase Demo

{% endblock %}


{% block content %}

    <section id="hero">
        <h1>Flask and Supabase Demo</h1>
    </section>

    <section id="things">

        {% for thing in things %}

            <article>

                <header>
                    <h4>{{ thing["name"] }}</h4>
                </header>

                <p>{{ thing["description"] }}</p>

                <p>Cost <strong>${{ thing["cost"] }}</strong></p>

                <p>Rating <strong>{{ thing["rating"] }}</strong> / 5</p>

                <footer>
                    Delete
                </footer>

            </article>

        {% endfor %}

    </section>

{% endblock %}
